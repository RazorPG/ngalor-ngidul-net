<% layout('layout') %>
<div class="d-flex flex-column h-100 align-items-center justify-content-start">
  <div class="col-12 col-lg-6 text-center bg-dark p-3 rounded">
    <h1 class="font-bold fs-3 text-white">
      ingin berbagi cerita tentang hari ini?
    </h1>
    <a
      href="/home/posts"
      class="btn btn-primary btn btn-dark bg-black bg-opacity-50 w-100"
      style="--bs-btn-hover-bg: transparent"
      ><i data-feather="check-square"></i><b> POST</b></a
    >
  </div>
  <% if (posts) { %><% posts.forEach(post => { %>
  <div class="card col-12 col-lg-6 mt-5 bg-dark text-white">
    <div class="card-body px-4">
      <div class="align-items-center d-flex justify-content-between">
        <div
          class="d-flex flex-column justify-content-center align-items-start"
        >
          <small class="fst-italic"><%=post.user_id.username %></small>
          <small class="post-date"> <%= post.createAt %> </small>
        </div>
        <a
          href="/home/posts/<%= post._id %>/edit"
          style="width: 24px; height: 24px"
        >
          <% if (currentUser._id.toString() == post.user_id._id.toString()) { %>
          <i data-feather="edit" style="color: white"></i>
          <% } %>
        </a>
      </div>
      <h5 class="card-title fw-semibold"><%= post.title %></h5>
      <% if (post.image) { %>
      <img src="<%= post.image %>" alt="image-post" class="card-img" />
      <% } %>
      <p class="card-text text-justify"><%= post.content %></p>
      <a href="/home/:idpost/like" class="btn btn-success">like</a>
      <a href="/home/:idpost/comment" class="btn btn-warning">comment</a>
    </div>
  </div>
  <% }) %> <% } %>
</div>
