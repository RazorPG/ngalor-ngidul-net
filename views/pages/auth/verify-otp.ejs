<% layout('layout') %>
<div class="d-flex w-100 justify-content-center align-items-center flex-column h-100">
  <div class="col-12 col-lg-6 bg-dark p-3 pt-5 rounded position-relative" style="padding-top: 4.5rem !important">
    <div class="bg-black bg-opacity-75 rounded-circle p-3 position-absolute top-0 start-50 translate-middle">
      <i data-feather="key" style="color: white; width: 4rem; height: 4rem"></i>
    </div>
    <form action="/verify-otp" method="post" class="validated-form gap-2 gap-lg-3 d-flex flex-column" novalidate>
      <div class="input-group mb-3">
        <span class="input-group-text" id="visible-addon"><i data-feather="key"></i></span>
        <input type="text" id="otp" name="otp" placeholder="enter OTP" aria-label="otp" class="form-control" required />
        <div class="valid-feedback">look good!</div>
        <div class="invalid-feedback">please enter the OTP</div>
      </div>
      <button type="submit" class="btn btn-dark bg-black bg-opacity-50" style="--bs-btn-hover-bg: transparent">
        <i data-feather="check"></i> <b>VERIFY</b>
      </button>
    </form>
  </div>
</div>
